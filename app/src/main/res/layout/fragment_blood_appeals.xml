<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medicall.ranglerz.com.medicall.BloodAppealsFragment"
    android:id="@+id/bloodRequestFragment"
    android:background="@drawable/listingbackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doNotPayForBlood"
        android:background="@color/doNotPayBGColor"
        android:textColor="@color/doNotPayTextColor"
        android:textSize="@dimen/doNotPayTextSizeDimen"
        android:padding="@dimen/doNotPayPadingDimen"
        android:gravity="center"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bloodAppealRecyclerView"
        android:scrollbars="none"
        android:paddingTop="@dimen/Layout_paddingTop"
        android:paddingRight="@dimen/Layout_paddingRight"
        android:paddingLeft="@dimen/Layout_paddingLeft"
        android:paddingBottom="@dimen/Layout_paddingBottom"
        android:padding="@dimen/Layout_padding"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noDataAvailable"
        android:textSize="@dimen/noAvailableTextSize"
        android:textColor="@color/noAvailableColor"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/emptyViewBloodAppeal"/>


    <ProgressBar
        android:id="@+id/loadmore_blood_appeal_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:visibility="gone"/>

</LinearLayout>
