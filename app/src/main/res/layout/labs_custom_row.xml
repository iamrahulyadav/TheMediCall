<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardPreventCornerOverlap="false"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="3dp">

                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/labRowProfileImg"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:src="@drawable/banner"-->
                    <!--app:civ_border_color="@color/imageCircularColor"-->
                    <!--app:civ_border_width="@dimen/picture_circular" />-->


                <ImageView
                    android:id="@+id/labRowProfileImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/name" />


                <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="5dp">-->

                <!--<ImageView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/locationicon"-->
                <!--android:layout_gravity="center_horizontal"/>-->



                <!--</FrameLayout>-->


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/labRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/labRowPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phone"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    android:visibility="gone" />




                <TextView
                    android:id="@+id/labRowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chugtai Lab"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/listingHeadingSize"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"
                    android:ellipsize="end"
                    android:maxLines="1"/>




                <TextView
                    android:id="@+id/labRowAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2-asif block. Main Boulevard , Allama Iqbal Town, Lahore"
                    android:textColor="@color/addressColor"
                    android:textSize="@dimen/addressSize"
                    android:typeface="serif"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/labRowDiscountedImg"
                    android:layout_width="50dp"
                    android:layout_height="51dp"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:src="@drawable/discounted"
                    android:visibility="visible"
                    android:scaleType="fitXY"/>




            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">



                <TextView
                    android:id="@+id/labRowDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="14 KM"
                    android:textColor="@color/blackColor"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@drawable/location_background_radious"
                    />

                <!--
                                android:background="@drawalocation_background_radiousious"
                -->



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:gravity="center|left"
                >


                <RatingBar
                    android:id="@+id/labRowRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:theme="@style/RatingBar" />

                <!--<ImageView-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="12dp"-->
                <!--android:src="@drawable/starranking"-->
                <!--android:layout_gravity="left"/>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">


                <ImageView
                    android:id="@+id/labRowCallIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/callicon"
                    />

            </LinearLayout>

        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bottombackground"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/docBottomLayout"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center">

                    <ImageView
                        android:layout_width="@dimen/universalbarimgwidth"
                        android:layout_height="@dimen/universalbarimgheight"
                        android:src="@drawable/askicon"
                        android:layout_marginRight="@dimen/universalbarmarginright"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask"
                        android:textColor="@color/universalbarcolor"
                        android:textSize="@dimen/universalbartextsize"
                        android:typeface="serif"
                        android:gravity="center"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center">


                    <ImageView
                        android:layout_width="@dimen/universalbarimgwidth"
                        android:layout_height="@dimen/universalbarimgheight"
                        android:src="@drawable/thumbsup"
                        android:layout_marginRight="@dimen/universalbarmarginright"/>

                    <TextView
                        android:id="@+id/doctorRowNoOfThumbUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/universalbarcolor"
                        android:textSize="@dimen/universalbartextsize"
                        android:typeface="serif"
                        android:gravity="center"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center">


                    <ImageView
                        android:layout_width="@dimen/universalbarimgwidth"
                        android:layout_height="@dimen/universalbarimgheight"
                        android:src="@drawable/viewicon"
                        android:layout_marginRight="@dimen/universalbarmarginright"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/universalbarcolor"
                        android:textSize="@dimen/universalbartextsize"
                        android:typeface="serif"
                        android:gravity="center"
                        />



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center">


                    <ImageView
                        android:layout_width="@dimen/universalbarimgwidth"
                        android:layout_height="@dimen/universalbarimgheight"
                        android:src="@drawable/shareicon"
                        android:layout_marginRight="@dimen/universalbarmarginright"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="@color/universalbarcolor"
                        android:textSize="@dimen/universalbartextsize"
                        android:typeface="serif"
                        android:gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>