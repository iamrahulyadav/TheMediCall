<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/universalbarcolor"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Please Select Speciality"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_specialisty_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_weight="8"/>


    <Button
        android:id="@+id/bt_dialog_continue"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Continue"
        android:textColor="@color/whiteColor"
        android:textAllCaps="false"
        android:background="@drawable/buttom_press_state"
        android:layout_below="@+id/lv_specialisty_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>