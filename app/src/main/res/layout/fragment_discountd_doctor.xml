<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medicall.ranglerz.com.medicall.DiscountdDoctorFragment"
    android:background="@drawable/listingbackground"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_discounted_doc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="@dimen/Layout_paddingTop"
        android:paddingRight="@dimen/Layout_paddingRight"
        android:paddingLeft="@dimen/Layout_paddingLeft"
        android:paddingBottom="@dimen/Layout_paddingBottom"
        android:padding="@dimen/Layout_padding"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noDataAvailable"
        android:textSize="@dimen/noAvailableTextSize"
        android:textColor="@color/noAvailableColor"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/emptyViewDiscountedDr"/>

    <ProgressBar
        android:id="@+id/loadMore_discounted_doc_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:visibility="gone"/>

</FrameLayout>
