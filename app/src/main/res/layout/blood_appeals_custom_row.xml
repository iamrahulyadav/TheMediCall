<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="0dp"
    >




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                android:orientation="vertical">



                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:text="B+"-->
                    <!--android:typeface="monospace"-->
                    <!--android:textSize="26sp"-->
                    <!--android:id="@+id/bloodAppealGroup"-->
                    <!--android:textColor="@color/blackColor"-->
                    <!--android:layout_gravity="top|center"-->
                    <!--android:layout_weight="1"-->
                    <!--android:visibility="gone"/>-->



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/bloodAppealId"
                        android:visibility="gone"/>



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/blooddrop"/>



                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="bottom|center"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="B+"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/bloodAppealGroup"
                        android:textColor="@color/whiteColor"/>



                </FrameLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodAppealStatus"
                    android:text="Donor arranged..."
                    android:textColor="#f9302f2f"
                    android:textSize="12sp"
                    android:layout_weight="1" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodAppealHours"
                    android:text="about 3 hours ago"
                    android:textSize="12sp"
                    android:textColor="@color/hintColor"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bloodAppealRequestName"
                    android:text=" by Adeel Khalil"
                    android:textSize="12sp"
                    android:textColor="@color/hintColor"
                    android:layout_marginTop="2dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample text Sample text Sample text Sample text Sample text"
                    android:id="@+id/bloodAppealDescription"
                    android:textColor="@color/blackColor"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample text Sample text Sample text Sample text Sample text"
                    android:id="@+id/bloodAppealDetail"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:id="@+id/bloodAppealPhone"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.3"
                android:gravity="center">


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/message"
                    android:id="@+id/bloodAppealMessage"
                    android:layout_weight="1"/>


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/callicon"
                    android:id="@+id/bloodAppeaCall"
                    android:layout_weight="1"
                   />


                <ImageView
                    android:id="@+id/bloodAppealShare"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/shareicon"
                    android:layout_weight="1"
                    />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layerType="software"
            android:src="@drawable/dotted_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.8"
                android:gravity="center"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/bloodAppealDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="14 KM"
                    android:textColor="@color/blackColor"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@drawable/location_background_radious"
                    android:layout_gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/locationpointer"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Address"
                    android:textSize="12sp"
                    android:textColor="@color/hintColor"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/bloodAppealGoogleAddress"/>


            </LinearLayout>







        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>