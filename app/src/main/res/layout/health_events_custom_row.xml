<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/healthEventRowId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:visibility="gone" />


                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:id="@+id/healthEventRowProfileImage"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:src="@drawable/banner"-->
                    <!--card_view:civ_border_color="@color/blueColor"-->
                    <!--card_view:civ_border_width="2dp" />-->


                <ImageView
                    android:id="@+id/healthEventRowProfileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/name" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/healthEventRowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Adeel"
                    android:textColor="@color/redColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/healthEventRowDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="09-27-2017"
                    android:textColor="@color/blackColor"
                    android:textSize="12sp"
                    android:typeface="serif" />

            </LinearLayout>
        </LinearLayout>

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="5dp"-->
        <!--android:layout_marginTop="0dp"-->
        <!--android:layerType="software"-->
        <!--android:src="@drawable/dotted_line" />-->


        <ImageView
            android:id="@+id/healthEventRowCoverImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="From:"
                        android:textColor="@color/whiteColor"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/healthEventRowStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27-Sep-2017"
                        android:textColor="@color/whiteColor"
                        android:textSize="12sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/healthEventRowStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM"
                        android:textColor="@color/whiteColor"
                        android:textSize="12sp"
                        android:typeface="serif" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To:"
                        android:textColor="@color/whiteColor"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/healthEventRowEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27-Sep-2017"
                        android:textColor="@color/whiteColor"
                        android:textSize="12sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/healthEventRowEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00 PM"
                        android:textColor="@color/whiteColor"
                        android:textSize="12sp"
                        android:typeface="serif" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/healthEventRowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Blood Donation Camp"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/healthEventRowAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="122 B, Commercial area sector C , Bahria Town Lahore"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layerType="software"
            android:src="@drawable/dotted_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/healthEventRowFavourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/favoriteicon"
                    android:drawablePadding="5dp"
                    android:text="4"
                    android:textSize="14sp"
                    android:paddingRight="40dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/healthEventRowView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/viewicon"
                    android:drawablePadding="5dp"
                    android:text="4"
                    android:textSize="14sp"
                    android:paddingRight="40dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/healthEventRowShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shareicon"
                    android:drawablePadding="5dp"
                    android:text="4"
                    android:textSize="14sp"
                    android:paddingRight="40dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/healthEventRowSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/saveicon"
                    android:drawablePadding="5dp"
                    android:text="4"
                    android:textSize="14sp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>