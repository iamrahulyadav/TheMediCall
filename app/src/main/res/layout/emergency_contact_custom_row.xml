<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="0dp"
    card_view:cardPreventCornerOverlap="false"
    >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="6dp">


    <TextView
        android:id="@+id/emergency_contacts_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/emergency_contacts_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />



    <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/emergency_contacts_image"-->
        <!--android:layout_width="45dp"-->
        <!--android:layout_height="45dp"-->
        <!--android:src="@drawable/amblance"-->
        <!--app:civ_border_color="@color/imageCircularColor"-->
        <!--app:civ_border_width="@dimen/picture_circular"/>-->



    <ImageView
        android:id="@+id/emergency_contacts_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/amblance" />



    <TextView
        android:id="@+id/emergency_contacts_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="Service Name"
        android:textColor="@color/redColor"
        android:textSize="@dimen/listingHeadingSize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/emergency_contacts_call_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/callicon"
        />

</LinearLayout>

</android.support.v7.widget.CardView>