<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Subspeciality"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blueColor"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_dialog_title"/>

    <EditText
        android:id="@+id/et_user_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:layout_marginTop="6dp"
        android:hint="Please Type Here"
        android:paddingLeft="6dp"/>

    <Button
        android:id="@+id/bt_dialog_submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/buttom_press_state"
        android:text="Submit"
        android:textColor="@color/whiteColor"
        android:textAllCaps="false"
        android:layout_below="@id/et_user_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

</RelativeLayout>