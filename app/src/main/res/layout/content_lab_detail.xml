<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medicall.ranglerz.com.medicall.LabDetail"
    tools:showIn="@layout/activity_lab_detail"
    android:orientation="vertical"
    android:paddingTop="@dimen/Layout_paddingTop"
    android:paddingRight="@dimen/Layout_paddingRight"
    android:paddingLeft="@dimen/Layout_paddingLeft"
    android:paddingBottom="@dimen/Layout_paddingBottom"
    android:padding="@dimen/Layout_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="3dp">

                        <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                            <!--android:id="@+id/labRowProfileImg"-->
                            <!--android:layout_width="40dp"-->
                            <!--android:layout_height="40dp"-->
                            <!--android:src="@drawable/banner"-->
                            <!--app:civ_border_color="@color/imageCircularColor"-->
                            <!--app:civ_border_width="@dimen/picture_circular" />-->

                        <ImageView
                            android:id="@+id/labRowProfileImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/name" />


                        <!--<FrameLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginTop="5dp">-->

                        <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:src="@drawable/locationicon"-->
                        <!--android:layout_gravity="center_horizontal"/>-->

                        <TextView
                            android:id="@+id/labRowDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center"
                            android:layout_marginTop="5dp"
                            android:text="2 KM"
                            android:textColor="@color/blueColor"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <!--</FrameLayout>-->


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp">

                        <TextView
                            android:id="@+id/labRowId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="id"
                            android:textSize="14sp"
                            android:typeface="monospace"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/labRowPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="phone"
                            android:textSize="14sp"
                            android:typeface="monospace"
                            android:visibility="gone" />




                        <TextView
                            android:id="@+id/labRowName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chugtai Lab"
                            android:textColor="@color/redColor"
                            android:textSize="@dimen/listingHeadingSize"
                            android:textStyle="bold"
                            android:layout_marginTop="0dp"
                            android:ellipsize="end"
                            android:maxLines="1"/>




                        <TextView
                            android:id="@+id/labRowAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2-asif block. Main Boulevard , Allama Iqbal Town, Lahore"
                            android:textColor="@color/addressColor"
                            android:textSize="@dimen/addressSize"
                            android:typeface="serif"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >



                        <ImageView
                            android:id="@+id/labRowCallIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/callicon"
                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/bottombackground"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/docBottomLayout"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/askicon"
                                android:drawablePadding="5dp"
                                android:text="Ask"
                                android:textColor="@color/blackColor"
                                android:textSize="10sp"
                                android:typeface="serif"
                                android:gravity="center"/>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center">


                            <TextView
                                android:id="@+id/doctorRowNoOfThumbUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/blackColor"
                                android:drawableLeft="@drawable/thumbsup"
                                android:drawablePadding="5dp"
                                android:typeface="serif"
                                android:textSize="10sp"
                                android:gravity="center"
                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/viewicon"
                                android:drawablePadding="5dp"
                                android:text="20"
                                android:textColor="@color/blackColor"
                                android:textSize="10sp"
                                android:typeface="serif"
                                android:gravity="center"
                                />


                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/shareicon"
                                android:drawablePadding="5dp"
                                android:text="Share"
                                android:textColor="@color/blackColor"
                                android:textSize="10sp"
                                android:typeface="serif"
                                android:gravity="center"
                                />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="@dimen/headingSize"
                android:textColor="@color/headingColor"
                android:textStyle="bold"
                android:id="@+id/labDetailAboutHeading"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text Sample Text "
                android:textSize="@dimen/belowHeadingTextSize"
                android:textColor="@color/belowHeadingTextColor"
                android:typeface="serif"
                android:id="@+id/labDetailAbout"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layerType="software"
                android:src="@drawable/dotted_line"
                android:id="@+id/labDetailAboutLine" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Timing"
                android:textSize="@dimen/headingSize"
                android:textColor="@color/headingColor"
                android:textStyle="bold"
                android:id="@+id/labDetailTimingHeading"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 / 7"
                android:id="@+id/labAlwaysTiming"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:typeface="serif"
                android:textColor="@color/blackColor"
                android:visibility="gone"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/order_medicine_dotted_line"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/labDetailTimingLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textColor="@color/blackColor"
                        android:textSize="13sp"
                        android:typeface="serif" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:id="@+id/labDetailStartTiming"/>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textColor="@color/blackColor"
                        android:textSize="13sp"
                        android:typeface="serif" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 AM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:id="@+id/labDetailEndTiming"/>

                </LinearLayout>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/lab_timing_other_status_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:scrollbars="none" />





            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layerType="software"
                android:src="@drawable/dotted_line"
                android:id="@+id/labDetailTimingLayoutLine" />


            <TextView
                android:id="@+id/labDetailLocationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textSize="@dimen/headingSize"
                android:textColor="@color/headingColor"
                android:textStyle="bold" />


            <com.google.android.gms.maps.MapView
                android:id="@+id/mapViewLab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_height"
                android:layout_marginTop="5dp"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layerType="software"
                android:src="@drawable/dotted_line"
                android:id="@+id/labDetailLocationLine" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textSize="@dimen/headingSize"
                android:textColor="@color/headingColor"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:id="@+id/LabDetailServicesHeading"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/labDetailServicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:layout_marginTop="5dp"
                />





        </LinearLayout>

    </ScrollView>

    </FrameLayout>
</LinearLayout>
