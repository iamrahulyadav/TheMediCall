<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medicall.ranglerz.com.medicall.AppealBlood"
    tools:showIn="@layout/activity_appeal_blood"
    android:orientation="vertical"
    android:background="@color/formBackground">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doNotPayForBlood"
        android:background="@color/doNotPayBGColor"
        android:textColor="@color/doNotPayTextColor"
        android:textSize="@dimen/doNotPayTextSizeDimen"
        android:padding="@dimen/doNotPayPadingDimen"
        android:gravity="center"
        android:visibility="gone"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/edittext_bottom_line"
            android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
            android:layout_weight="1"
            android:layout_marginRight="5dp">


            <Spinner
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/appealBloodGroup"
                />

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/edittext_bottom_line"
            android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            >

            <Spinner
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/appealBloodUnit"
                />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">




        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:hint="Full Name"
            android:id="@+id/appealBloodName"
            android:inputType="text"
            android:background="@drawable/edittext_bottom_line"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/hintSize"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:hint="Contact No."
            android:id="@+id/appealBloodContact"
            android:inputType="number"
            android:background="@drawable/edittext_bottom_line"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/hintSize"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/edittext_bottom_line"
            android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
            android:layout_weight="1">


            <Spinner
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/appealBloodUrgency"
                />

        </RelativeLayout>

    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Location"
        android:id="@+id/appealBloodLocation"
        android:inputType="text"
        android:background="@drawable/edittext_bottom_line"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/hintSize"
        android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
        android:gravity="left|center"
        android:clickable="true"
        android:focusable="false"
        android:drawableRight="@drawable/locationpointer"
        android:drawablePadding="10dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:hint="Hospital / Clinic Name"
        android:id="@+id/appealBloodHospitalName"
        android:inputType="text"
        android:background="@drawable/edittext_bottom_line"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/hintSize"
        android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
        />


    <EditText
        android:id="@+id/appealBloodAnyDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_text_margin_top_in_minus"
        android:background="@drawable/edittext_bottom_line"
        android:hint="Any Detail"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="3"
        android:scrollbars="vertical"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/hintSize" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="Submit"
        android:id="@+id/appealBloodSubmit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/button_text_size"
        android:background="@drawable/buttom_press_state"
        android:layout_marginLeft="@dimen/button_margin_left"
        android:layout_marginRight="@dimen/button_margin_right"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerError" />


</LinearLayout>
    </ScrollView>
</LinearLayout>