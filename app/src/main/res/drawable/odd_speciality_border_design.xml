<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="1dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0dp"
                android:color="#64d22020" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />


            <gradient
                android:startColor="#00633a3a"
                android:endColor="#deffe7e7"
                android:angle="90"
                android:dither="true"/>

        </shape>
    </item>
</layer-list>

