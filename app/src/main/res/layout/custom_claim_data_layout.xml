<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="0dp"
    card_view:cardPreventCornerOverlap="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <!--<ImageView-->
                <!--android:id="@+id/hospitalRowProfileImg"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/circular_img"-->
                <!--android:src="@drawable/banner" />-->


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">



                        <ImageView
                            android:id="@+id/doctorRowProfileImg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/name"
                            />


                    </LinearLayout>


                </FrameLayout>


                <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="10dp">-->

                <!--<ImageView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/locationicon"-->
                <!--android:layout_gravity="center_horizontal"/>-->






                <!--</FrameLayout>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/doctorRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    >


                    <TextView
                        android:id="@+id/doctorRowName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Aftab Rabbani"
                        android:textColor="@color/redColor"
                        android:textSize="@dimen/listingHeadingSize"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"/>


                    <ImageView
                        android:id="@+id/verifiedDoc"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/verifieddoc"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:visibility="gone"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/doctorRowSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Gastroenterologist"
                    android:textColor="@color/blackColor"
                    android:textSize="10dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/doctorRowDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="MRCP"
                    android:textColor="@color/blackColor"
                    android:textSize="10dp"
                    android:typeface="serif" />


                <TextView
                    android:id="@+id/doctor_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Hospitals"
                    android:textColor="@color/blackColor"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:typeface="serif" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">


                <Button
                    android:id="@+id/bt_claim"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:text="Claim"
                    android:textSize="12sp"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/buttom_press_state"/>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="5dp">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/doctorRowClaimProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/experience_background_radious"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Claim Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>